{% extends 'layouts/base.njk' %}

{# Intro content #}
{% set introHeading = title %}
{% set introSummary %}
  {{ content | safe }}
{% endset %}

{# Post list content #}
{% set postListHeading = postsHeading %}
{% set postListItems = collections["postFeed_" + locale] %}
{% set skipFirstPost = true %}


{# Archive link #}
{% set allPostItems = collections["posts_" + locale] %}
{% if postListItems.length < allPostItems.length %}
  {% set paginationNextText = archiveButtonText %}
  {% set paginationNextUrl = 'archive' %}
{% endif %}

{% block content %}
  <main id="main-content" tabindex="-1">
    {% include "partials/components/intro.njk" %}
    {% include "partials/components/latest-post.njk" %}
    {% include "partials/components/post-list.njk" %}
    {% include "partials/components/pagination.njk" %}
  </main>
{% endblock %}
